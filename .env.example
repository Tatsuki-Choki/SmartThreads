# Application Environment
NODE_ENV=development
APP_NAME=SmartThreads
APP_VERSION=1.0.0
PORT=3000
FRONTEND_URL=http://localhost:3001

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=smartthreads
DATABASE_USER=smartthreads_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_here
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_chars_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Encryption
ENCRYPTION_KEY=your_encryption_key_must_be_32_chars_long!!
COLUMN_ENCRYPTION_KEY=your_column_key_must_be_32_chars_long!!!

# Threads API Configuration
THREADS_APP_ID=your_threads_app_id
THREADS_APP_SECRET=your_threads_app_secret
THREADS_REDIRECT_URI=http://localhost:3001/auth/callback
THREADS_SCOPE=threads_basic,threads_content_publish,threads_manage_insights,threads_manage_replies,threads_read_replies

# S3/MinIO Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=smartthreads-media
S3_REGION=us-east-1
S3_USE_SSL=false

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your_session_secret_min_32_chars_here
SESSION_MAX_AGE=86400000

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090
LOG_LEVEL=info

# Push Notifications (PWA)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@smartthreads.com

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# Timezone
DEFAULT_TIMEZONE=Asia/Tokyo

# Security Headers
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.threads.net"
HSTS_MAX_AGE=31536000

# Feature Flags
ENABLE_PWA=true
ENABLE_ANALYTICS=true
ENABLE_BULK_OPERATIONS=true
ENABLE_SCHEDULED_POSTS=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."